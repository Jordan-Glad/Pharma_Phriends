@model Pharma_Phriends.ViewModels.SearchViewModel 
<div style="text-align:center;">
    <h1  class="text-dark">Pharma <br> Phriends </h1>
    <h7  class="text-warning">*Now With More Phriends!!</h7>
    <br>
    <br>
    <br />
</div>
        


<h4 style="color:darkgray;">Pick Drug and Zip Code</h4>
<hr />


<form class="form-inline" method="post">
    <div class="form-group mb-3">
        <label asp-for="RxDrugsId" class="text-muted"><b>Drug: </b></label>
        <select asp-for="RxDrugsId" asp-items="Model.AllDrugs" class="ml-3"></select>
    </div>

     <div class="form-group mx-sm-3 mb-3">
        <label asp-for="ZipCode">ZipCode</label>
        <input type="text" class="form-control" asp-for="ZipCode"/>
        <span></span>
    </div>
   <button type="submit" class="btn btn-warning mb-3" style="color:rebeccapurple;">Search For Drug</button>
</form>
<table class ="table">
    <tr>
        <th>Drug Name</th>
        <th>Pharmacy</th>
        <th>Price</th>
    </tr>
   @foreach (var item in Model.SearchResult.PharmaPrices)
        {
            <tr>
                <td><a class="nav-link  text-primary" asp-area="" asp-controller="Home" asp-action="Detail" asp-route-id="@Model.SearchResult.RxDrugId">@Model.SearchResult.DrugName</a></td>
                <td class="text-muted">@Html.DisplayFor(modelItem => item.PharmacyName)</td>
                <td class="text-muted">$@Html.DisplayFor(modelItem => item.Price)</td>
            </tr>
        }
</table>
